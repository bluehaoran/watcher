{
  "name": "price-tracker",
  "version": "1.0.0",
  "description": "Multi-source price and version tracking application",
  "main": "dist/index.js",
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "db:studio": "prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^5.18.0",
    "playwright": "^1.46.0",
    "express": "^4.19.2",
    "node-cron": "^3.0.3",
    "dotenv": "^16.4.5",
    "winston": "^3.13.0",
    "nodemailer": "^6.9.14",
    "zod": "^3.23.8",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.3.1",
    "express-session": "^1.18.0",
    "optimal-select": "^4.0.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/express": "^4.17.21",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.15",
    "typescript": "^5.5.4",
    "tsx": "^4.16.2",
    "prisma": "^5.18.0",
    "vitest": "^2.0.5",
    "@vitest/ui": "^2.0.5",
    "eslint": "^8.57.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "prettier": "^3.3.3"
  }
}