# Application Environment
RUST_ENV=development
RUST_LOG=uatu_watcher=debug,tower_http=debug,sqlx=info

# Database Configuration
UATU_DATABASE__URL=sqlite:///data/uatu.db
UATU_DATABASE__MAX_CONNECTIONS=10
UATU_DATABASE__MIN_CONNECTIONS=1
UATU_DATABASE__ACQUIRE_TIMEOUT=30

# Server Configuration
UATU_SERVER__HOST=0.0.0.0
UATU_SERVER__PORT=3000
UATU_SERVER__BASE_URL=http://localhost:3000
UATU_SERVER__REQUEST_TIMEOUT=30
UATU_SERVER__SHUTDOWN_TIMEOUT=10

# Security Configuration
UATU_SECURITY__SECRET_KEY=your-secret-key-here-minimum-32-chars
UATU_SECURITY__JWT_EXPIRY=3600
UATU_SECURITY__RATE_LIMIT_REQUESTS=100
UATU_SECURITY__RATE_LIMIT_WINDOW=60

# Scraper Configuration
UATU_SCRAPER__MAX_CONCURRENT_CHECKS=5
UATU_SCRAPER__RETRY_ATTEMPTS=3
UATU_SCRAPER__RETRY_DELAY_MS=5000
UATU_SCRAPER__REQUEST_TIMEOUT=30
UATU_SCRAPER__USER_AGENT=UatuWatcher/1.0
CHROME_PATH=/usr/bin/chromium-browser

# Scheduler Configuration  
UATU_SCHEDULER__DEFAULT_INTERVAL=0 0 * * *
UATU_SCHEDULER__MAX_RUNNING_JOBS=10
UATU_SCHEDULER__JOB_TIMEOUT=300

# Email Notifications
UATU_NOTIFICATIONS__SMTP__HOST=smtp.gmail.com
UATU_NOTIFICATIONS__SMTP__PORT=587
UATU_NOTIFICATIONS__SMTP__USERNAME=your-email@gmail.com
UATU_NOTIFICATIONS__SMTP__PASSWORD=your-app-password
UATU_NOTIFICATIONS__SMTP__FROM_ADDRESS=Uatu Watcher <your-email@gmail.com>
UATU_NOTIFICATIONS__SMTP__FROM_NAME=Uatu Watcher
UATU_NOTIFICATIONS__SMTP__USE_TLS=true

# Discord Notifications
UATU_NOTIFICATIONS__DISCORD__WEBHOOK_URL=https://discord.com/api/webhooks/...
UATU_NOTIFICATIONS__DISCORD__USERNAME=Uatu Watcher
UATU_NOTIFICATIONS__DISCORD__AVATAR_URL=

# Screenshot Configuration
UATU_SCREENSHOTS__ENABLED=true
UATU_SCREENSHOTS__QUALITY=80
UATU_SCREENSHOTS__MAX_SIZE_MB=5
UATU_SCREENSHOTS__RETENTION_DAYS=30

# Monitoring and Metrics
UATU_METRICS__ENABLED=true
UATU_METRICS__PORT=9001
UATU_METRICS__ENDPOINT=/metrics

# Performance Tuning
UATU_PERFORMANCE__THREAD_POOL_SIZE=4
UATU_PERFORMANCE__MEMORY_LIMIT_MB=256
UATU_PERFORMANCE__ENABLE_COMPRESSION=true